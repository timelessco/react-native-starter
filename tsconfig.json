{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "tailwind": ["./tailwind"],
      "src/*": ["./src/*"]
    }
  },
  "exclude": [
    "./node_modules",
    "./babel.config.js",
    "./metro.config.js",
    "./jest.config.js",
    "./tailwind.config.js"
  ]
}
